<GameScreen>:
    on_pre_enter: player2_name.text = root.player2.get_name()
    on_pre_enter: player1_name.text = root.player1.get_name()
    on_pre_enter: button1.text = root.player1.get_name()
    on_pre_enter: button2.text = root.player2.get_name()
    MDGridLayout:
        pos_hint: {'top': 1}
        adaptive_height: True
        cols: 4
        rows: 3
        MDLabel:
            text: "Players"
            halign: 'center'
        MDLabel:
            text: "Points"
            halign: 'center'
        MDLabel:
            text: "Games"
            halign: 'center'
        MDLabel:
            text: "Sets"
            halign: 'center'
        MDLabel:
            id: player1_name
            text: ""
            halign: 'center'
        MDLabel:
            id: points_label1
            text: '0'
            halign: 'center'
        MDLabel:
            id: games_label1
            text: "0"
            halign: 'center'
        MDLabel:
            id: sets_label1
            text: "0"
            halign: 'center'
        MDLabel:
            id: player2_name
            text: "Player1"
            halign: 'center'
        MDLabel:
            id: points_label2
            text: "0"
            halign: 'center'
        MDLabel:
            id: games_label2
            text: "0"
            halign: 'center'
        MDLabel:
            id: sets_label2
            text: "0"
            halign: 'center'

    MDRectangleFlatButton:
        id: button1
        pos_hint: {'center_x': .3, 'center_y':.2}
        on_release: app.update_scoreboard(root.player1, root.player2, root.match)

    MDRectangleFlatButton:
        id: button2
        pos_hint: {'center_x': .7, 'center_y':.2}
        on_release: app.update_scoreboard(root.player2, root.player1, root.match)
