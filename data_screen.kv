<DataScreen>
    on_pre_enter: bottom_navigation._refresh_tabs()
    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: {'top': 1}
        MDGridLayout:
            adaptive_height: True
            cols: 4
            rows: 2
            MDLabel:
                id: player1_name
                halign: 'center'
            MDLabel:
                id: set1_player1
                halign: 'center'
            MDLabel:
                id: set2_player1
                halign: 'center'
            MDLabel:
                id: set3_player1
                halign: 'center'
            MDLabel:
                id: player2_name
                halign: 'center'
            MDLabel:
                id: set1_player2
                halign: 'center'
            MDLabel:
                id: set2_player2
                halign: 'center'
            MDLabel:
                id: set3_player2
                halign: 'center'

        MDBottomNavigation:
            id: bottom_navigation
            MDBottomNavigationItem:
                name: 'set1'
                text: 'Set 1'
                icon: 'tennis'
                MDLabel:
                    text: 'Set 1'
                    halign: 'center'
            MDBottomNavigationItem:
                name: 'set2'
                text: 'Set 2'
                icon: 'tennis'
                MDLabel:
                    text: 'Set 2'
                    halign: 'center'
            MDBottomNavigationItem:
                name: 'set3'
                text: 'Set 3'
                icon: 'tennis'
                MDLabel:
                    text: 'Set 3'
                    halign: 'center'