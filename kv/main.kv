#:include kv/game_screen.kv
#:include kv/input_screen.kv
#:include kv/home_screen.kv
#:include kv/data_screen.kv
#:include kv/save_screen.kv
#:include kv/navigation_drawer.kv
#:include kv/setting_screen.kv


NavigationLayout:

    ScreenManager:

        Screen:

            MDBoxLayout:
                orientation: 'vertical'

                MyToolbar:
                    title: "Tennis App"
                    elevation: 5
                    left_action_items: [['menu', lambda x: nav_drawer.set_state()]]
                    right_action_items: [["settings", lambda x: self.show_dialog_confirmation()]]
                    action_icon_color: 1, 1 ,1, 1
                    specific_text_color: 1, 1, 1, 1
                    #  md_bg_color: app.get_rgba_from_hex('#E87611')

                ScreenManager:
                    id: manager

                    HomeScreen:
                        name: 'home_screen'
                        id: home_screen

                    InputScreen:
                        id: input_screen
                        name : 'input_screen'

                    GameScreen:
                        name: "game_screen"
                        id: game_screen

                    SaveScreen:
                        name: 'save_screen'
                        id: save_screen

                    DataScreen:
                        name : 'data_screen'
                        id: data_screen

                    SettingScreen:
                        name : 'setting_screen'
                        id: setting_screen

    NavDrawer:
        id: nav_drawer







