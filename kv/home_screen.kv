<HomeScreen>
    MDBoxLayout:
        orientation: 'vertical'
        spacing: 30
        MDLabel:
            text: 'Welcome to the Tennis Tracker App!'
            halign: 'center'
            font_style: "H2"
            font_size: "30sp"
            theme_text_color: "Primary"
            pos_hint: {'center_y': .8}
        MDBoxLayout:
            orientation: 'vertical'
            spacing: dp(30)
            padding: [0, 0, 0, 100]
            MDRectangleFlatButton:
                text: "Create a match"
                pos_hint: {'center_x': .5}
                on_release: app.change_screen('input_screen')
            MDRectangleFlatButton:
                text: "Saved Match"
                pos_hint: {'center_x': .5}
                on_release: app.change_screen('save_screen')
