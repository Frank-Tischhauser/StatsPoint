<LeaderBoard>
    cols: 1
    rows: 6
    spacing: dp(30)
    size_hint_y: None
    height: self.minimum_height
    row_default_height: '50dp'
    row_force_default: True
    #md_bg_color: app.theme_cls.primary_color
    padding: [0, dp(30)]
    Rows:
        id: row1
    Rows:
        id: row2
    Rows:
        id: row3
    Rows:
        id: row4
    Rows:
        id: row5
    Rows:
        id: row6


<Rows>
    orientation: 'horizontal'
    spacing: dp(50)
    MDLabel:
        id: col1
        text: '0'
        halign: 'center'
    MDLabel:
        id: col2
        text: 'VS'
        halign: 'center'
    MDLabel:
        id: col3
        text: '0'
        halign: 'center'


<DataScreen>:
    on_pre_enter: bottom_navigation._refresh_tabs()
    on_pre_enter: set1_scroll.scroll_y = 1 ; set2_scroll.scroll_y = 1 ; set3_scroll.scroll_y = 1
    on_pre_enter: bottom_navigation.switch_tab('set1')
    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: {'top': 1}
        spacing: [0, dp(20)]
        padding: [0, dp(10), 0, 0]
        MDGridLayout:
            adaptive_height: True
            cols: 4
            rows: 3
            MDLabel:
                id: player1_name
                halign: 'center'
            MDLabel:
                id: set1_player1
                halign: 'center'
            MDLabel:
                id: set2_player1
                halign: 'center'
            MDLabel:
                id: set3_player1
                halign: 'center'
            MDLabel:
                id: player2_name
                halign: 'center'
            MDLabel:
                id: set1_player2
                halign: 'center'
            MDLabel:
                id: set2_player2
                halign: 'center'
            MDLabel:
                id: set3_player2
                halign: 'center'

        MDBottomNavigation:
            id: bottom_navigation

            MDBottomNavigationItem:
                name: 'set1'
                text: 'Set 1'
                icon: 'tennis'
                on_pre_enter: set1_scroll.scroll_y = 1
                MDSeparator:
                    height: '1dp'
                    pos_hint: {'top': 1}
                ScrollView:
                    id: set1_scroll
                    pos_hint: {"top": 1, "left": 1}
                    size_hint: 1, 1
                    LeaderBoard:
                        id: set1_stats
            MDBottomNavigationItem:
                name: 'set2'
                text: 'Set 2'
                icon: 'tennis'
                on_pre_enter: set2_scroll.scroll_y = 1
                MDSeparator:
                    height: '1dp'
                    pos_hint: {'top': 1}
                ScrollView:
                    id: set2_scroll
                    pos_hint: {"top": 1, "left": 1}
                    size_hint: 1, 1
                    LeaderBoard:
                        id: set2_stats
            MDBottomNavigationItem:
                name: 'set3'
                text: 'Set 3'
                icon: 'tennis'
                on_pre_enter: set3_scroll.scroll_y = 1
                MDSeparator:
                    height: '1dp'
                    pos_hint: {'top': 1}
                ScrollView:
                    id: set3_scroll
                    pos_hint: {"top": 1, "left": 1}
                    size_hint: 1, 1
                    LeaderBoard:
                        id: set3_stats