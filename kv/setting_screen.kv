<SettingScreen>
    MDBoxLayout:
        orientation: 'vertical'
        adaptive_height: True
        #adaptive_width: True
        pos_hint: {'top': .6, 'center_x': .5}
        spacing: dp(50)
        MDBoxLayout:
            orientation: 'horizontal'
            spacing: dp(30)
            adaptive_height: True
            #adaptive_width: True
            MDLabel:
                text: 'Light'
                halign: 'center'
            MDSwitch:
                id: style_switch
                pos_hint: {'center_x': .5}
                on_active: root.style_switcher()
            MDLabel:
                text: 'Dark'
                halign: 'center'

        MDRectangleFlatButton:
            pos_hint: {'center_x': .5}
            text: 'Quit'
            on_release: quit()
