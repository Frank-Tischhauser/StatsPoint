<ColorLabel@MDLabel>:
    halign: 'center'
    theme_text_color: 'Custom'
    text_color: app.theme_cls.primary_color
    font_size: '15sp'



<FormScreen>:
    md_bg_color: app.get_rgba_from_hex('#EEEEEE')
    WhiteBox:
        orientation: 'vertical'
        pos_hint: {'top': .95, 'center_x': .5}
        size_hint_y: None
        adaptive_height: True
        spacing: dp(10)
        size_hint_x: .9
        md_bg_color: 1, 1, 1, 1
        padding: ['10dp', '20dp', '10dp', '20dp']
        MDLabel:
            text: 'Player'
            halign: 'left'
        MDBoxLayout:
            size_hint_y: None
            size_hint_x : 1
            height: self.minimum_height
            #  spacing: dp(-100)
            ColorLabel:
                halign: 'right'
                text: 'Player1'
                id: player1
            MDCheckbox:
                size_hint: None, None
                size: "48dp", "48dp"
                pos_hint: {'center_y':.5}
                group: 'player'
                id: check_player1
            ColorLabel:
                halign: 'right'
                text: 'Player2'
                id: player2
            MDCheckbox:
                size_hint: None, None
                size: "48dp", "48dp"
                pos_hint: {'center_y':.5}
                group: 'player'
                id: check_player2
        MDSeparator:
            height: '1dp'
            size_hint_x: .95
            pos_hint: {'center_x':.5}
        Widget:
            height: '10dp'
        MDLabel:
            text: 'Level'
            halign: 'left'
        MDBoxLayout:
            size_hint_y: None
            size_hint_x : 1
            height: self.minimum_height
            #  spacing: dp(-100)
            ColorLabel:
                halign: 'center'
                text: 'Begin.'
                text_color: 0, .5, 0, 1
            MDCheckbox:
                size_hint: None, None
                size: "48dp", "48dp"
                pos_hint: {'center_y':.5}
                group: 'level'
                id: check_level1
            ColorLabel:
                halign: 'center'
                text: 'Interm.'
            MDCheckbox:
                size_hint: None, None
                size: "48dp", "48dp"
                pos_hint: {'center_y':.5}
                group: 'level'
                id: check_level2
            ColorLabel:
                halign: 'center'
                text: 'Adv.'
                text_color: 5., 0 ,0, 1
            MDCheckbox:
                size_hint: None, None
                size: "48dp", "48dp"
                pos_hint: {'center_y':.5}
                group: 'level'
                id: check_level3
        MDSeparator:
            height: '1dp'
            size_hint_x: .95
            pos_hint: {'center_x':.5}
        Widget:
            height: '10dp'
        MDLabel:
            text: 'Which profile do you feel closest to?'
            halign: 'left'
        Widget:
            height: '10dp'
        MDBoxLayout:
            size_hint_y: None
            size_hint_x : 1
            height: self.minimum_height
            #  spacing: dp(-100)
            ColorLabel:
                halign: 'center'
                text: 'Attack the net'
            MDCheckbox:
                size_hint: None, None
                size: "48dp", "48dp"
                pos_hint: {'center_y':.5}
                group: 'style'
                id: check_style1
            ColorLabel:
                halign: 'center'
                text: 'All court'
            MDCheckbox:
                size_hint: None, None
                size: "48dp", "48dp"
                pos_hint: {'center_y':.5}
                group: 'style'
                id: check_style2
        MDBoxLayout:
            size_hint_y: None
            size_hint_x : 1
            height: self.minimum_height
            #  spacing: dp(-100)
            ColorLabel:
                halign: 'center'
                text: 'Aggressive/ Baseliner'
            MDCheckbox:
                size_hint: None, None
                size: "48dp", "48dp"
                pos_hint: {'center_y':.5}
                group: 'style'
                id: check_style3
            ColorLabel:
                halign: 'center'
                text: 'Pushers/    Retrievers'
            MDCheckbox:
                size_hint: None, None
                size: "48dp", "48dp"
                pos_hint: {'center_y':.5}
                group: 'style'
                id: check_style4
        Widget:
            height: '20dp'
        MDRaisedButton:
            text: 'DONE'
            pos_hint: {'center_x':.5}
            text_color: 1, 1, 1, 1
            md_bg_color: 0.91, 0.46, 0.07, 1
            theme_text_color: 'Custom'
            on_release: root.questions_done()
        Widget:
            height: '5dp'
        MDLabel:
            halign: 'center'
            text: 'Checkboxes are missing!'
            id: error_message
            markup: True
            color: (1, 0 , 0, 1)
            pos_hint: {'center_x': .5, 'center_y': .3}
            font_style: "H3"
            font_size: "12sp"
            padding: [0, '12dp']

