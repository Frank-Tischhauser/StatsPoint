<DataScreen>
    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: {'top': 1}
        adaptive_height: True
        MDBoxLayout:
            orientation: 'horizontal'
            adaptive_height: True
            MDLabel:
                id: player1
                text: 'Frank'
                halign: 'center'
            MDLabel:
                text: 'VS'
                halign: 'center'
            MDLabel:
                id: player2
                text: 'Nadal'
                halign: 'center'
        MDBoxLayout:
            orientation: 'horizontal'
            adaptive_height: True
            size_hint: 1, .6
            MDLabel:
                id: points1
                text: '58'
                halign: 'center'
            MDLabel:
                text: 'Points won'
                halign: 'center'
            MDLabel:
                id: points2
                text: '63'
                halign: 'center'
        MDBoxLayout:
            orientation: 'horizontal'
            adaptive_height: True
            MDLabel:
                text: '12'
                halign: 'center'
            MDLabel:
                text: 'Winners'
                halign: 'center'
            MDLabel:
                text: '15'
                halign: 'center'
    MDFloatingActionButton:
        icon: "undo"
        elevation_normal: 8
        pos_hint: {"center_x": .85, "center_y":.1}
        md_bg_color: app.theme_cls.primary_color
        on_release: app.change_screen('save_screen', 'right')